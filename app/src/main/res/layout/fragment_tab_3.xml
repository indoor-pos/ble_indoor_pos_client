<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SecondFragment"
    android:background="@color/WHITE">

    <LinearLayout
        android:id="@+id/devices_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/device_1_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/device_2_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/device_3_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/tab_text_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/devices_state" />

    <TextView
        android:id="@+id/position_parameters_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="@string/position_parameters_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position" />

    <TextView
        android:id="@+id/name_label_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="@string/name_label_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_parameters_label" />
    <EditText
        android:id="@+id/name_1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/name_label_1"
        app:layout_constraintRight_toLeftOf="@+id/x_point_label_1"
        app:layout_constraintTop_toTopOf="@+id/name_label_1"
        app:layout_constraintBottom_toBottomOf="@+id/name_label_1" />

    <TextView
        android:id="@+id/x_point_label_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_point_label"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_label_1"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/x_point_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:singleLine="true"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/x_point_label_1"
        app:layout_constraintRight_toLeftOf="@+id/y_point_label_1"
        app:layout_constraintTop_toTopOf="@+id/x_point_label_1"
        app:layout_constraintBottom_toBottomOf="@+id/x_point_label_1" />

    <TextView
        android:id="@+id/y_point_label_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/y_point_label"
        app:layout_constraintLeft_toRightOf="@+id/x_point_label_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/x_point_label_1" />
    <EditText
        android:id="@+id/y_point_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/y_point_label_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/y_point_label_1"
        app:layout_constraintBottom_toBottomOf="@+id/y_point_label_1" />

    <TextView
        android:id="@+id/name_label_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="@string/name_label_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_label_1" />
    <EditText
        android:id="@+id/name_2"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/name_label_2"
        app:layout_constraintRight_toLeftOf="@+id/x_point_label_2"
        app:layout_constraintTop_toTopOf="@+id/name_label_2"
        app:layout_constraintBottom_toBottomOf="@+id/name_label_2" />

    <TextView
        android:id="@+id/x_point_label_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_point_label"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_label_2"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/x_point_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:singleLine="true"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/x_point_label_2"
        app:layout_constraintRight_toLeftOf="@+id/y_point_label_2"
        app:layout_constraintTop_toTopOf="@+id/x_point_label_2"
        app:layout_constraintBottom_toBottomOf="@+id/x_point_label_2" />

    <TextView
        android:id="@+id/y_point_label_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/y_point_label"
        app:layout_constraintLeft_toRightOf="@+id/x_point_label_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/x_point_label_2" />
    <EditText
        android:id="@+id/y_point_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/y_point_label_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/y_point_label_2"
        app:layout_constraintBottom_toBottomOf="@+id/y_point_label_2" />

    <TextView
        android:id="@+id/name_label_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="@string/name_label_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_label_2" />
    <EditText
        android:id="@+id/name_3"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/name_label_3"
        app:layout_constraintRight_toLeftOf="@+id/x_point_label_3"
        app:layout_constraintTop_toTopOf="@+id/name_label_3"
        app:layout_constraintBottom_toBottomOf="@+id/name_label_3" />

    <TextView
        android:id="@+id/x_point_label_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_point_label"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_label_3"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/x_point_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:singleLine="true"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/x_point_label_3"
        app:layout_constraintRight_toLeftOf="@+id/y_point_label_3"
        app:layout_constraintTop_toTopOf="@+id/x_point_label_3"
        app:layout_constraintBottom_toBottomOf="@+id/x_point_label_3" />

    <TextView
        android:id="@+id/y_point_label_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/y_point_label"
        app:layout_constraintLeft_toRightOf="@+id/x_point_label_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/x_point_label_3" />
    <EditText
        android:id="@+id/y_point_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/y_point_label_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/y_point_label_3"
        app:layout_constraintBottom_toBottomOf="@+id/y_point_label_3" />


    <Button
        android:id="@+id/position_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginRight="156dp"
        android:text="@string/position_button_start"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y_point_label_3" />

    <TextView
        android:id="@+id/sms_parameters_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="@string/sms_parameters_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_button"
        android:textColor="@color/WHITE"/>

    <TextView
        android:id="@+id/phone_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="@string/phone_number_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sms_parameters_label"
        android:textColor="@color/WHITE"
        android:background="@color/WHITE"/>
    <EditText
        android:id="@+id/phone_number"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/phone_number_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_number_label"
        app:layout_constraintBottom_toBottomOf="@+id/phone_number_label"
        android:background="@color/WHITE"/>

    <TextView
        android:id="@+id/distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="@string/distance_label"
        app:layout_constraintLeft_toLeftOf="@+id/phone_number_label"
        app:layout_constraintRight_toRightOf="@+id/phone_number_label"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_label"
        android:textColor="@color/WHITE"
        android:background="@color/WHITE"/>
    <EditText
        android:id="@+id/distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/phone_number"
        app:layout_constraintRight_toLeftOf="@+id/x_point_3"
        app:layout_constraintTop_toTopOf="@+id/distance_label"
        app:layout_constraintBottom_toBottomOf="@+id/distance_label"
        android:textColor="@color/WHITE"
        android:background="@color/WHITE"/>

    <Button
        android:id="@+id/sms_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:text="@string/confirm_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number" />









</androidx.constraintlayout.widget.ConstraintLayout>